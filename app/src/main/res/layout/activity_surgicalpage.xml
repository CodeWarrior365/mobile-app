<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".surgicalpage"
    android:orientation="vertical">

    <androidx.drawerlayout.widget.DrawerLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/drawerlayout">
    <com.google.android.material.navigation.NavigationView
        android:id="@+id/navigationdrawer"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:background="#fff"
        app:itemTextColor="#000"
        app:itemIconTint="#800000"

        app:menu="@menu/menunav"
        android:layout_gravity="start"
        app:headerLayout="@layout/activity_drawertop">

    </com.google.android.material.navigation.NavigationView>



        <LinearLayout
            android:weightSum="8"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/gradient_bg">

            <Button
                android:id="@+id/cutting"
                android:transitionName="transition"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:layout_gravity="center"
                android:background="@drawable/cuttingtwo"
                android:text=" Cutting Equipment"
                android:fontFamily="sans-serif-black"
                android:layout_marginTop="5dp"
                android:gravity="bottom"
                android:textSize="25sp"
                android:textColor="#000000"
                android:layout_weight="2"/>

            <Button
                android:id="@+id/grasping"
                android:transitionName="transition"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:layout_gravity="center"
                android:background="@drawable/graspingone"
                android:text=" Grasping equipment"
                android:fontFamily="sans-serif-black"
                android:layout_marginTop="5dp"
                android:gravity="bottom"
                android:textSize="25sp"
                android:textColor="#000000"
                android:layout_weight="2"/>


            <Button

                android:id="@+id/clamping"
                android:transitionName="transition"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:layout_gravity="center"
                android:background="@drawable/clampingone"
                android:text=" Clamping Equipment"
                android:fontFamily="sans-serif-black"
                android:layout_marginTop="5dp"
                android:gravity="bottom"
                android:textSize="24sp"
                android:textColor="#000000"
                android:layout_weight="2"/>


            <Button
                android:id="@+id/retracting"
                android:transitionName="transition"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:layout_gravity="center"
                android:background="@drawable/retractingone"
                android:text=" Retracting Equipment"
                android:fontFamily="sans-serif-black"
                android:layout_marginTop="5dp"
                android:gravity="bottom"
                android:textSize="25sp"
                android:textColor="#000000"
                android:layout_weight="2"
                android:layout_marginBottom="10dp"/>

        </LinearLayout>
    </androidx.drawerlayout.widget.DrawerLayout>




</LinearLayout>